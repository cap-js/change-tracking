{
	"dependencies": {
		"@cap-js/attachments": "^2",
		"@cap-js/change-tracking": "file:../../.",
		"@cap-js/hana": "^2.3.4",
		"@cap-js/postgres": "^2.1.2"
	},
	"devDependencies": {
		"@cap-js/sqlite": "*"
	},
	"scripts": {
		"deploy:postgres": "cds build --production  && cds deploy --profile pg"
	},
	"cds": {
		"requires": {
			"auth": {
				"[development]": {
					"users": {
						"alice": {
							"roles": [
								"support",
								"admin"
							]
						},
						"bob": {
							"roles": [
								"support"
							]
						}
					}
				}
			},
			"attachments": {
				"kind": "db",
				"scan": false
			},
			"change-tracking": {
				"considerLocalizedValues": true,
				"preserveDeletes": false
			}
		},
		"features": {
			"serve_on_root": true,
			"locale_fallback": true
		}
	}
}