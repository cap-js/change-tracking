{
	"dependencies": {
		"@cap-js/attachments": "^2",
		"@cap-js/change-tracking": "file:../../.",
		"@cap-js/postgres": "^1 || ^2",
		"@cap-js/hana": "^2"
	},
	"devDependencies": {
		"@cap-js/sqlite": "*"
	},
	"scripts": {
		"test": "jest",
		"test:sqlite": "CDS_ENV=sqlite jest",
		"test:pg": "CDS_ENV=pg jest",
		"test:hana": "CDS_ENV=hana jest",
		"test:all": "npm test && npm run test:sqlite && npm run test:pg && npm run test:hana",
		"watch:h2": "mvn spring-boot:run",
		"watch:hana": "cds watch --profile hana",
		"watch:sqlite": "cds watch --profile sqlite",
		"watch:postgres": "cds watch --profile pg",
		"deploy:hana": "cds deploy --to hana",
		"deploy:postgres": "cds build --production && cds deploy --profile pg"
	},
	"cds": {
		"requires": {
			"auth": {
				"[development]": {
					"users": {
						"alice": {
							"roles": [
								"support",
								"admin"
							]
						},
						"bob": {
							"roles": [
								"support"
							]
						}
					}
				}
			},
			"attachments": {
				"kind": "db",
				"scan": false
			},
			"change-tracking": {
				"considerLocalizedValues": true
			}
		},
		"features": {
			"serve_on_root": true,
			"locale_fallback": true
		}
	}
}
