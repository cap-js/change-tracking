{
	"dependencies": {
		"@cap-js/attachments": "^2",
		"@cap-js/change-tracking": "file:../../.",
		"@cap-js/postgres": "^1 || ^2",
		"@cap-js/hana": "^2"
	},
	"devDependencies": {
		"@cap-js/sqlite": "^1 || ^2"
	},
	"scripts": {
		"watch:h2": "mvn spring-boot:run",
		"watch:hana": "cds watch --profile hana",
		"watch:sqlite": "cds watch --profile sqlite",
		"watch:postgres": "cds watch --profile pg",
		"deploy:hana": "cds deploy --to hana",
		"deploy:postgres": "cds build --production && cds deploy --profile pg",
		"start:pg": "docker compose -f pg.yml up -d && npm run deploy:postgres"
	},
	"cds": {
		"log": {
			"levels": {
				"sql": "info",
				"cds": "info"
			}
		},
		"requires": {
			"auth": {
				"[development]": {
					"users": {
						"alice": {
							"roles": [
								"support",
								"admin"
							]
						},
						"bob": {
							"roles": [
								"support"
							]
						}
					}
				}
			},
			"attachments": {
				"kind": "db",
				"scan": false
			},
			"change-tracking": {
				"considerLocalizedValues": true,
				"preserveDeletes": false
			}
		},
		"features": {
			"serve_on_root": true,
			"locale_fallback": true
		}
	}
}