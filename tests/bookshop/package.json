{
	"dependencies": {
		"@cap-js/attachments": "^2",
		"@cap-js/change-tracking": "file:../../.",
		"@cap-js/hana": "^2.3.4",
		"@cap-js/postgres": "^2.1.2"
	},
	"devDependencies": {
		"@sap/cds-dk": "^9.6.1",
		"@cap-js/sqlite": "*"
	},
	"scripts": {
		"watch:sqlite": "cds watch --with sqlite",
		"watch:h2": "mvn spring-boot:run",
		"watch:hana": "cds watch --profile hybrid",
		"deploy:hana": "cds deploy --to hana",
		"deploy:postgres": "cds build --production  && cds deploy --profile pg",
		"watch:postgres": "cds watch --with pg"
	},
	"cds": {
		"requires": {
			"auth": {
				"[development]": {
					"users": {
						"alice": {
							"roles": [
								"support",
								"admin"
							]
						},
						"bob": {
							"roles": [
								"support"
							]
						}
					}
				}
			},
			"attachments": {
				"kind": "db",
				"scan": false
			},
			"change-tracking": {
				"considerLocalizedValues": true,
				"preserveDeletes": false
			}
		},
		"features": {
			"serve_on_root": true,
			"locale_fallback": true
		}
	}
}
